"   Ryan Fleck's VIMRC.
"   Designed for editing Python, C, Markdown. 

"   Basic Visual Properties
syntax on
colorscheme ron
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set smarttab
set autoindent

"   File Management
set autoread

"   Line Numbering
set lbr
set number
highlight LineNr ctermfg=grey

"   Markdown/Text Tweaks
autocmd FileType markdown call SetTextEditingOptions()
autocmd FileType asciidoc call SetTextEditingOptions()
autocmd FileType text call SetTextEditingOptions()
function SetTextEditingOptions()
    setlocal spell spelllang=en_us
    setlocal tw=80
    nnoremap <F7> gq<cr>
endfunction

"   C Tweaks 
autocmd FileType c nnoremap <F8> :! clear && gcc % && clear && ./a.out<cr>

"   Python Tweaks
autocmd FileType python setlocal formatprg=autopep8\ -
autocmd FileType python  nnoremap <F7> :! clear && autopep8 -i -a -a -a %<cr>
autocmd FileType python  nnoremap <F8> :! clear && python3 %<cr>

"   Common Lisp Tweaks
autocmd FileType lisp nnoremap <F8> :! clear && sbcl < %<cr>

"   Scheme Tweaks
autocmd FileType scheme nnoremap <F8> :! clear && scheme < %<cr>

"   Racket Tweaks
autocmd BufReadPost *.rkt,*.rktl nnoremap <F8> :! clear && racket %<cr>

"   Disable Trackpad
set mouse=a

nmap <ScrollWheelUp> <nop>
nmap <S-ScrollWheelUp> <nop>
nmap <C-ScrollWheelUp> <nop>
nmap <ScrollWheelDown> <nop>
nmap <S-ScrollWheelDown> <nop>
nmap <C-ScrollWheelDown> <nop>
nmap <ScrollWheelLeft> <nop>
nmap <S-ScrollWheelLeft> <nop>
nmap <C-ScrollWheelLeft> <nop>
nmap <ScrollWheelRight> <nop>
nmap <S-ScrollWheelRight> <nop>
nmap <C-ScrollWheelRight> <nop>

imap <ScrollWheelUp> <nop>
imap <S-ScrollWheelUp> <nop>
imap <C-ScrollWheelUp> <nop>
imap <ScrollWheelDown> <nop>
imap <S-ScrollWheelDown> <nop>
imap <C-ScrollWheelDown> <nop>
imap <ScrollWheelLeft> <nop>
imap <S-ScrollWheelLeft> <nop>
imap <C-ScrollWheelLeft> <nop>
imap <ScrollWheelRight> <nop>
imap <S-ScrollWheelRight> <nop>
imap <C-ScrollWheelRight> <nop>

vmap <ScrollWheelUp> <nop>
vmap <S-ScrollWheelUp> <nop>
vmap <C-ScrollWheelUp> <nop>
vmap <ScrollWheelDown> <nop>
vmap <S-ScrollWheelDown> <nop>
vmap <C-ScrollWheelDown> <nop>
vmap <ScrollWheelLeft> <nop>
vmap <S-ScrollWheelLeft> <nop>
vmap <C-ScrollWheelLeft> <nop>
vmap <ScrollWheelRight> <nop>
vmap <S-ScrollWheelRight> <nop>
vmap <C-ScrollWheelRight> <nop>
