package com.libgdx.battlecommander;

import com.badlogic.gdx.ApplicationAdapter;
import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.graphics.OrthographicCamera;
import com.badlogic.gdx.graphics.Texture;
import com.badlogic.gdx.maps.tiled.TiledMap;
import com.badlogic.gdx.maps.tiled.TiledMapRenderer;
import com.badlogic.gdx.maps.tiled.TmxMapLoader;

/*
 * Panning battle map:
 * https://github.com/libgdx/libgdx/wiki/Orthographic-camera
 * 
 * 
 * */


public class BattleCommander extends ApplicationAdapter {
	private Texture img;
	private TiledMap map;
	private OrthographicCamera cam;
	private TiledMapRenderer mapRenderer;
	
	
	
	@Override
	public void create () {
		
		//Query width and height of window.
		float w = Gdx.graphics.getWidth();
		float h = Gdx.graphics.getHeight();
		
		//Initialize camera.
		cam = new OrthographicCamera();
		cam.setToOrtho(false,w,h);
		cam.update();
		
		//Initialize map.
		map = new TmxMapLoader().load("VirtMap1.tmx");
		
	}

	@Override
	public void render () {

		queryInput();

		adjustVariables();

		drawGraphics();

	}
	
	@Override
	public void dispose () {


	}
	
	@Override
	public void resize(int width, int height){
		//viewport.update(width,height);
	}
	
	public void queryInput(){
		
	}
	public void adjustVariables(){
		
		
	}
	
	public void drawGraphics(){
		
	}
	
	
}
